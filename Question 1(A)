#include <stdio.h>
#include <string.h>
#include <ctype.h>
void main()
{
  char str[1000];
  int sen, ch, i;
	   printf("Enter the string for case change : ");
       fgets(str, sizeof str, stdin);  
  i=strlen(str);
  sen = i;
  printf("The string after case change is: ");
  for(i=0; i < sen; i++)
  {
    ch = islower(str[i]) ? toupper(str[i]) : tolower(str[i]);
    putchar(ch);
   }
   printf("\n\n");
}
