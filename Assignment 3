#include<stdio.h>
#include<math.h>
void main ()
{
    float x[100],sum,sdsum,mean,sd;
    int i,n;
    printf ("Enter the no of elements for calculation = ");
    scanf ("%d", &n);
    printf ("Enter the numbers to be evaluated = ");
    for (i=0;i<n;i++)
    {
        scanf ("%f",x+i);
        sum = sum + *(x+i);
    }
    mean = sum/n;
    for (i=0;i<n;i++)
    {
        sdsum = sdsum + pow ((*(x+i)-mean),2);
    }
    sd = sqrt(sdsum/n);
    printf ("Sum = %.2f\n",sum);
    printf ("Mean = %.2f\n",mean);
    printf ("Standard deviation = %.2f\n",sd);
}
